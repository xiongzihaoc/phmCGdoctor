.box {
  background-color: #fff;
  padding: 0 40rpx 40rpx;
  box-sizing: border-box;
}

.infoList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.fontWeight {
  font-weight: 700;
}

.fontColor {
  color: #ccc;
  text-align: right;
}

.user_info_sex {
  width: 300rpx;
  padding: 10rpx;
  box-sizing: border-box;
  text-align: right;
}

.btnSave {
  margin: 0 auto;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  text-align: center;
  color: #fff;
  background-color: #1adca9;
  border-radius: 100rpx;
}

.warning_box {
  padding: 10rpx 0;
  box-sizing: border-box;
  font-weight: 700;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background-color: #FDBD2F;
}

.instrCondition {
  margin: 30rpx 0;
}

textarea {
  width: 100%;
  min-height: 500rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  background-color: #fff;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .1);
}

.infoListBox {
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  background-color: #fff;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .1);
}